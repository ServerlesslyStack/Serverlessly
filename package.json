{
  "name": "serverlessly",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn && yarn fix-husky",
    "fix-husky": "ts-node ./scripts/fix-husky.ts",
    "repair": "yarn --check-files && yarn fix-husky",
    "list-packages": "yarn workspaces info && lerna ls",
    "ls": "yarn list-packages",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "micromatch": "^4.0.2",
    "prettier": "2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "yarn": "^1.22.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -q -c ./configs/lint-staged.config.js",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g ./configs/commitlint.config.js"
    }
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "@serverlessly/*"
    ]
  }
}
